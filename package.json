{
  "name": "vite-starter",
  "version": "0.0.1",
  "description": "âœ¨ vue project template",
  "main": "main.ts",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "build": "vue-tsc -b && vite build",
    "type-check": "vue-tsc -b",
    "format": "prettier --write ./src/*",
    "lint": "eslint . --fix --debug --ignore-pattern .gitignore",
    "stylelint": "stylelint \"src/**/*.{vue,css,scss}\"",
    "preview": "vite preview"
  },
  "keywords": [],
  "author": "Coder Poet",
  "license": "MIT",
  "dependencies": {
    "@vueuse/core": "^12.0.0",
    "dayjs": "^1.11.13",
    "element-plus": "^2.9.0",
    "pinia": "^2.3.0",
    "pinia-plugin-persistedstate": "^4.1.3",
    "sass": "^1.82.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@iconify/json": "^2.2.281",
    "@stylistic/eslint-plugin": "^2.12.0",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@unocss/eslint-config": "^0.65.1",
    "@unocss/postcss": "^0.65.1",
    "@unocss/preset-icons": "^0.65.1",
    "@unocss/preset-rem-to-px": "^0.65.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^15.13.0",
    "lint-staged": "^15.2.10",
    "only-allow": "^1.2.1",
    "prettier": "^3.4.2",
    "simple-git-hooks": "^2.11.1",
    "stylelint": "^16.11.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "unocss": "^0.65.1",
    "unocss-preset-theme": "^0.14.1",
    "unplugin-auto-import": "^0.18.6",
    "unplugin-element-plus": "^0.8.0",
    "unplugin-vue-components": "^0.27.5",
    "vite": "^6.0.3",
    "vite-plugin-vue-devtools": "^7.6.7",
    "vite-tsconfig-paths": "^5.1.4",
    "vue-tsc": "^2.1.10"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix",
    "*.{vue,css,scss}": "stylelint --fix"
  }
}
